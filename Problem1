#include <iostream>

using namespace std;

int main ()
{
	int hours, total;
	char package;
	
	cout << "This Program Shows Your Monthly Bill \n" << endl;
	
	cout << "Purchased Subscription Package (A, B, or C): ";
	cin >> package;
	
	cout << "Number of Hours Used: ";
	cin >> hours;
	

		switch (package)
	{
		case 'A':
		case 'a':
			total = 995 + (hours-10)*20;
			break;
		case 'B':
		case 'b':
			total = 1495 + (hours - 20)*10;
			break;
		case 'C':
		case 'c':
			total = 1995;
			break;
		default:
			cout << "Invalid Input!";
			break;
	}
	
	cout << "Total Amount Due: " << total;
	
	return 0;
}
