#include <iostream>

using namespace std;

int main ()
{
	int first, second, third, largest;
	
	cout << "Enter first number: ";
	cin >> first;
	
	cout << "Enter second number: ";
	cin >> second;
	
	cout << "Enter third number: ";
	cin >> third;
	
	if (first >= second && first >= third)
		cout << "\n The LARGEST of the three numbers is " << first << ".";
	
	else if (second >= first && second >= third)
		cout << "\n The LARGEST of the three numbers is " << second << ".";
	
	else if (third >= first && third >= second)
		cout << "\nThe LARGEST of the three numbers is " << third << ".";
	
	
	return 0;
}
